{
    "compilerOptions": {
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "**/__tests__/**"
    ]
}

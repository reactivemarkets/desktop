{
    "lerna": "2.4.0",
    "npmClient": "npm",
    "useWorkspaces": true,
    "packages": [
        "packages/*"
    ],
    "version": "0.38.0",
    "command": {
        "bootstrap": {
            "hoist": true
        },
        "publish": {
            "preDistTag": "next",
            "noGitReset": true
        },
        "version": {
            "allowBranch": "main",
            "conventionalCommits": true,
            "createRelease": "github",
            "gitRemote": "upstream",
            "message": "chore(release): publish %v"
        }
    },
    "ignoreChanges": [
        ".dependabot/",
        ".github/",
        "docs/",
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md"
    ]
}

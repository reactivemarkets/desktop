{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            "name": "Launch Dock in Chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/packages/desktop/dock/dist/**/*.js"
        },
        {
            "name": "Launch API standalone",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "npm: build:dev:api",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "args": [
                "${workspaceFolder}/packages/desktop-api/dist/main.js",
            ],
            "sourceMaps": true,
            "outputCapture": "std",
            "outFiles": [
                "${workspaceFolder}/apps/desktop-api/dist/**/*.js"
            ]
        },
        {
            "name": "Launch Url",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "npm: build:dev:core",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "args": [
                "${workspaceFolder}/packages/desktop-core/dist/main.js",
                "--url",
                "https://desktop.reactivemarkets.com"
            ],
            "env": {
                "DESKTOP_LOG_LEVEL": "debug",
            },
            "outputCapture": "std",
            "outFiles": [
                "${workspaceFolder}/packages/desktop-core/dist/**/*.js"
            ],
            "sourceMaps": true,
        },
        {
            "name": "Launch Dock",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "npm: build:dev:core",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "args": [
                "${workspaceFolder}/packages/desktop-core/dist/main.js",
                "--file",
                "${workspaceFolder}/packages/desktop-dock/example.yaml"
            ],
            "env": {
                "DESKTOP_LOG_LEVEL": "debug",
            },
            "outputCapture": "std",
            "outFiles": [
                "${workspaceFolder}/packages/desktop-core/dist/**/*.js"
            ],
            "sourceMaps": true,
        }
    ]
}
